# Application
# The environment the app is running in
NODE_ENV=development
# The name of your application
APP_NAME="Control Center"
# The base URL where your application is hosted
APP_URL=http://localhost:3000

# Database
# SQLite database URL - relative to project root
DATABASE_URL="file:./data/app.db"
# Directory for database backups - relative to project root
DATABASE_BACKUP_DIR="./data/backups"

# Authentication
# Secret key for JWT token generation - CHANGE THIS IN PRODUCTION!
JWT_SECRET="change-this-in-production"
# JWT token expiration time
JWT_EXPIRES_IN="7d"
# Name of the session cookie
SESSION_COOKIE_NAME="cc_session"

# File Upload Limits
# Maximum size for file uploads
MAX_UPLOAD_SIZE="10mb"
# Comma-separated list of allowed file types
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,application/zip"

# File Storage Paths
# Directory for general uploads - relative to project root
UPLOAD_DIR="./public/uploads"
# Directory for URL icons - relative to project root
ICONS_DIR="./public/icons"
# Directory for user avatars - relative to project root
AVATARS_DIR="./public/avatars"
# Directory for application logos - relative to project root
LOGOS_DIR="./public/logos"

# Security
# Default admin username created on first run
ADMIN_USERNAME="admin"
# Comma-separated list of allowed CORS origins
CORS_ORIGINS="http://localhost:3000"

# Feature Flags
# Enable file-based logging
ENABLE_FILE_LOGGING=true
# Enable automatic rotation of backup files
ENABLE_BACKUP_ROTATION=true
# Maximum number of backup files to keep
MAX_BACKUP_FILES=10

# Performance
# Cache time-to-live in seconds
CACHE_TTL=3600
# Maximum number of concurrent file uploads
MAX_CONCURRENT_UPLOADS=5
